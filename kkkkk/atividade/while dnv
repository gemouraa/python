import os
import time

os.system("clear")
contador = 0
soma = 0
numero = 0
while True:
    numero = float(input("Insira um número:"))
    
    if (numero >= 0):
        soma += numero
        contador += 1
    else        :
        break

media = soma / contador


print(f"Média:{media: .2f}")
print(f"Quantidade de vezes repetidas: {contador}")